{% extends 'base-back.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
<a href="{{ path('app_admin_contact_index') }}" class="btn btn-primary">
<i class="align-middle" data-feather="arrow-left"></i></a>
<a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-primary ms-3">
<i class="align-middle" data-feather="edit-2"></i></a>
</div>
<h1>Contact</h1>
    
    <table class="table">
        <tbody>
            {% if is_granted("ROLE_SUPERADMIN") %}
            <tr>
                <th>{% trans %}tableHeaders.id{% endtrans %}</th>
                <td>{{ contact.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>{% trans %}tableHeaders.title{% endtrans %}</th>
                <td>{{ contact.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}tableHeaders.content{% endtrans %}</th>
                <td>{{ contact.content|raw }}</td>
            </tr>
        </tbody>
    </table>



    {# {{ include('admin_contact/_delete_form.html.twig') }} #}
{% endblock %}
