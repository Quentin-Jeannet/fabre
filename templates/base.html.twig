<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# BOOTSTRAP #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {# FONTAWESOME #}
        <script src="https://kit.fontawesome.com/22189df88f.js" crossorigin="anonymous"></script>
        {#Fonts#}
        <link rel="stylesheet" href="{{asset('css/fonts.css')}}">
        {#Style Perso#}
        <link rel="stylesheet" href="{{asset('css/common.min.css')}}">
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg  py-0">
            <div class="container-fluid">
                <a class="navbar-brand py-0" href="#"><img src="{{asset('images/nerlyfe-logo-small60.jpg')}}" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{path('app_front')}}">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{path('app_face')}}">{% trans %}nav.presentiel{% endtrans %}</a>
                    </li>
                    {# <li class="nav-item">
                    <a class="nav-link" href="{{path('app_remote')}}">{% trans %}nav.remotely{% endtrans %}</a>
                    </li> #}
                    <li class="nav-item">
                    <a class="nav-link" href="{{path('app_register')}}">{% trans %}nav.register{% endtrans %}</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{path('app_contact')}}">{% trans %}nav.contact{% endtrans %}</a>
                    </li>

                </ul>
                </div>
            </div>
        </nav>
        <main class="content-wrapper bg-white shadow container px-0 px-lg-5 pb-4">
            {% block body %}{% endblock %}
        </main>
        <footer class="p-2">
            <img src="{{asset('images/logo-pierre-fabre.svg')}}" alt="">
        </footer>
    </body>
    {# BOOTSTRAP JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {% block javascripts %}
    {% endblock %}
</html>
