{% extends 'base-back.html.twig' %}

{% block title %}{% trans %}titles.home{% endtrans %}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
<a href="{{ path('app_admin_home_index') }}" class="btn btn-primary">
<i class="align-middle" data-feather="arrow-left"></i></a>
<a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-primary ms-3">
<i class="align-middle" data-feather="edit-2"></i></a>
</div>
    <h1>{% trans %}titles.home{% endtrans %}</h1>

    <table class="table">
        <tbody>
            {% if is_granted("ROLE_SUPERADMIN") %}
            <tr>
                <th>{% trans %}tableHeaders.id{% endtrans %}</th>
                <td>{{ home.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>{% trans %}tableHeaders.title{% endtrans %}</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}tableHeaders.content{% endtrans %}</th>
                <td>{{ home.content|raw }}</td>
            </tr>
            {# <tr>
                <th>IsActive</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr> #}
        </tbody>
    </table>



    {# {{ include('admin_home/_delete_form.html.twig') }} #}
{% endblock %}
